import java.util.Scanner;

public class PuestosTorneo {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Ingrese el puesto obtenido en el torneo (1, 2 o 3):");
        int puesto = sc.nextInt();

        if (puesto == 1) {
            System.out.println("¡Felicidades! Obtuviste la medalla de oro.");
        } else if (puesto == 2) {
            System.out.println("¡Felicidades! Obtuviste la medalla de plata.");
        } else if (puesto == 3) {
            System.out.println("¡Felicidades! Obtuviste la medalla de bronce.");
        } else {
            System.out.println("Sigue participando en futuros torneos.");
        }
    }
}
